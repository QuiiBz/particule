{
  "name": "particule",
  "version": "0.0.0",
  "description": "Fine-grained atomic React state management library",
  "author": "Tom Lienard",
  "license": "MIT",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "unpkg": "./dist/index.iife.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js"
    },
    "./localStorage": {
      "require": "./dist/helpers/localStorage.cjs.js",
      "import": "./dist/helpers/localStorage.esm.js"
    },
    "./reset": {
      "require": "./dist/helpers/reset.cjs.js",
      "import": "./dist/helpers/reset.esm.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/QuiiBz/particule.git",
    "directory": "packages/particule"
  },
  "bugs": {
    "url": "https://github.com/QuiiBz/particule/issues"
  },
  "homepage": "https://github.com/QuiiBz/particule#readme",
  "scripts": {
    "dev": "node ./build.js --watch",
    "dev:types": "tsc -w",
    "build": "node ./build.js",
    "build:types": "tsc",
    "test": "yarn test:eslint && yarn test:jest",
    "test:eslint": "eslint --cache --fix '*/**/*.{js,ts,tsx}'",
    "test:jest": "jest --no-watchman",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "esbuild": "^0.13.12",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": ">=6",
    "jest": "^27.3.1",
    "lint-staged": ">=10",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}

{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outFile": "./dist/index.d.ts"
  },
  "include": [
    "./src/**/*",
    "./__tests__/**/*",
    "./.eslintrc.js",
    "./*.js"
  ]
}
